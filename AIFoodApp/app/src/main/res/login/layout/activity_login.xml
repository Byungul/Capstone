<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="플랜밀"
        android:textColor="#000000"
        android:textSize="40sp"
        tools:layout_marginBottom="30dp"
        tools:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/character" />


        <LinearLayout
            android:id="@+id/btn_kakao"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_rect_button"
            android:backgroundTint="#f9e000"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_with">

            <View
                android:id="@+id/icon_kakao"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/kakao_icon" />

            <TextView
                android:id="@+id/tv_kakao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|fill_vertical"
                android:text="카카오로 쉬운 시작"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
