<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/layout_meal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_custom_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/meal_icon"
                android:text=" 식사"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_meal_detail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/round_rect_button"
                android:backgroundTint="#CAEAA6"
                android:text="상세보기"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_meal_delete"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_rect_button"
                android:backgroundTint="#F3C9C9"
                android:text="삭제하기"
                android:textSize="10sp" />

        </LinearLayout>

<!--        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_from_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#C5DDAA"
                android:text="사진촬영" />

            <Button
                android:id="@+id/btn_from_gallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#78AE3A"
                android:text="갤러리" />

        </LinearLayout>-->

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#B5B2B2" />

    </LinearLayout>

</LinearLayout>